{
  "name": "rabbitmq-fp",
  "version": "0.0.1",
  "description": "A straightforward RabbitMQ client with fp-ts",
  "main": "dist/index.js",
  "engines": {
    "node": "^16"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build:js & npm run build:types",
    "build:js": "swc ./src -d dist",
    "build:types": "tsc --build ./tsconfig.build.json",
    "lint": "eslint \"{src,test}/**/*.{js,ts}\"",
    "test": "jest",
    "test:cov": "jest --coverage",
    "prepare": "husky install",
    "depcheck": "depcheck"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MansaGroup/rabbitmq-fp.git"
  },
  "keywords": [
    "rabbitmq",
    "client",
    "functionnal",
    "fp-ts",
    "amqp"
  ],
  "author": "Jérémy Levilain <jeremy.levilain@getmansa.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MansaGroup/rabbitmq-fp/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        85
      ]
    }
  },
  "homepage": "https://github.com/MansaGroup/rabbitmq-fp#readme",
  "devDependencies": {
    "@commitlint/cli": "17.0.1",
    "@commitlint/config-conventional": "17.0.0",
    "@mansagroup/eslint-config": "0.0.2-4",
    "@swc/cli": "0.1.57",
    "@swc/core": "1.2.192",
    "@swc/jest": "0.2.21",
    "@types/amqplib": "0.8.2",
    "@types/jest": "27.5.1",
    "@typescript-eslint/eslint-plugin": "5.26.0",
    "@typescript-eslint/parser": "5.26.0",
    "axios": "0.27.2",
    "depcheck": "1.4.3",
    "eslint": "8.16.0",
    "husky": "8.0.1",
    "jest": "^28.1.0",
    "jest-extended": "2.0.0",
    "jest-sonar": "0.2.12",
    "lint-staged": "12.4.2",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "testcontainers": "8.10.1",
    "ts-jest": "28.0.3",
    "typescript": "4.7.2",
    "wait-for-expect": "3.0.2"
  },
  "peerDependencies": {
    "fp-ts": "^2.12.1"
  },
  "dependencies": {
    "amqp-connection-manager": "^4.1.3",
    "amqplib": "0.9.1"
  }
}
